program menu;
Uses crt;
Label 1;
var cislo_program:string;
    yn:char;
    x,y,z,minimum,maximum,stav_uctu,sucet,hmotnost_baliku:integer;

begin
1:Clrscr;
textcolor (lightred);
GotoXy (4,2);
writeln ('1.Minimum');
textcolor (green);
GotoXy (4,3);
writeln ('2.Maximum');
textcolor (yellow);
GotoXy (4,4);
writeln ('3.Random');
textcolor (lightgray);
GotoXy (4,5);
writeln ('4.Stav uctu');
textcolor (lightgreen);
GotoXy (4,6);
writeln ('5.Nosnost vytahu');
textcolor (white);
GotoXy (4,7);
writeln ('6.Koniec programu');
GotoXy (4,9);
Write ('Vyber si ktory program chces zapnut cislom:');
cislo_program:=Readkey;

if cislo_program='1' then
begin
clrscr;
textcolor (lightred);
writeln ('Zadaj pocet cisel z ktorych chces minimum');
readln (x);
minimum:=10000;
y:=0;
while y<x do
begin
  writeln ('Zadaj hodnotu cisla');
  readln (z);
if z<minimum then minimum:=z;
y:=y+1;
end;
writeln ('Minimum je ',minimum,'');
end;

if cislo_program='2' then
begin
Clrscr;
textcolor (green);
writeln ('Zadaj pocet cisel z ktorych chces vediet maximum');
readln (x);
maximum:=0;
y:=0;
while y<x do
begin
writeln ('Zadaj hodnotu cisla');
  readln (z);
if z>maximum then maximum:=z;
y:=y+1;
end;
writeln ('Maximum je ',maximum,'');
end;

if cislo_program='3' then
begin
Clrscr;
textcolor (yellow);
randomize;
x:=random (20);
while y<>x do
begin
writeln ('Zadaj cislo');
readln (y);
if y>x then writeln ('Menej');
if y<x then writeln ('Viac');
end;
writeln ('Uhadol si cislo');
end;

if cislo_program='4' then
begin
Clrscr;
textcolor (lightgray);
writeln ('Kolko eur mas na ucte ?');
readln (stav_uctu);
sucet:=0;
while sucet<stav_uctu do
begin
writeln ('Kolko platis v obchode ?');
readln (x);
sucet:=sucet+x;
write ( );
if sucet<stav_uctu then
writeln ('Na ucte mas ',(stav_uctu-sucet),'eur');
end;
y:=sucet-stav_uctu;
writeln ('Nemas dost penazi na ucte');
if y>0 then writeln ('Musis v obchode vratit veci v hodnote ',y,'eur');
end;

if cislo_program='5' then
begin
clrscr;
textcolor (lightgreen);
writeln ('Zadaj nosnost vytahu');
readln (x);
sucet:=0;
 while sucet<x do
  begin
  writeln ('Zadaj hmotnost baliku (kilogramy)');
  read (hmotnost_baliku);
  sucet:=sucet+hmotnost_baliku;
  end;
 y:=sucet-x;
 writeln ('Vytah je pretazeny o ',y,'kg');
 if y>0 then writeln ('Vyberte z vytahu baliky s hmotnostou aspon ',y,'kg');
end;

if cislo_program='6' then
begin
Clrscr;
textcolor (white);
write ('Chces vypnut program ? (a/n)');
yn:=Readkey;
if yn= 'a' then Halt;
if yn= 'n' then Goto 1;

 write ('Stlac ENTER pre vratenie sa do menu');
 Readkey;
Goto 1;
end;
readln;
end.
