program menu;
Uses crt;
Label 1;
var cislo_program:string;
    koniec_programu:char;
    pocet_cisel,x,nahodne_cislo,cislo,minimum,maximum,stav_uctu,sucet,hmotnost_baliku,platba_v_obchode,nedostatok
    ,nosnost_vytahu,pretazenie:integer;

begin
1:Clrscr;
textcolor (lightred);
GotoXy (4,2);
writeln ('1.Minimum');
textcolor (green);
GotoXy (4,3);
writeln ('2.Maximum');
textcolor (yellow);
GotoXy (4,4);
writeln ('3.Random');
textcolor (lightgray);
GotoXy (4,5);
writeln ('4.Stav uctu');
textcolor (lightgreen);
GotoXy (4,6);
writeln ('5.Nosnost vytahu');
textcolor (white);
GotoXy (4,7);
writeln ('6.Koniec programu');
GotoXy (4,9);
Write ('Vyber si ktory program chces zapnut cislom:');
cislo_program:=Readkey;

if cislo_program='1' then
begin
clrscr;
textcolor (lightred);
writeln ('Zadaj pocet cisel z ktorych chces minimum');
readln (pocet_cisel);
minimum:=10000;
x:=0;
while x<pocet_cisel do
begin
  writeln ('Zadaj hodnotu cisla');
  readln (cislo);
if cislo<minimum then minimum:=cislo;
x:=x+1;
end;
writeln ('Minimum je ',minimum,'');
end;

if cislo_program='2' then
begin
Clrscr;
textcolor (green);
writeln ('Zadaj pocet cisel z ktorych chces vediet maximum');
readln (pocet_cisel);
maximum:=0;
x:=0;
while x<pocet_cisel do
begin
writeln ('Zadaj hodnotu cisla');
  readln (cislo);
if cislo>maximum then maximum:=cislo;
x:=x+1;
end;
writeln ('Maximum je ',maximum,'');
end;

if cislo_program='3' then
begin
Clrscr;
textcolor (yellow);
randomize;
nahodne_cislo:=random (20);
while cislo<>nahodne_cislo do
begin
writeln ('Zadaj cislo');
readln (cislo);
if cislo>nahodne_cislo then writeln ('Menej');
if cislo<nahodne_cislo then writeln ('Viac');
end;
writeln ('Uhadol si cislo');
end;

if cislo_program='4' then
begin
Clrscr;
textcolor (lightgray);
writeln ('Kolko eur mas na ucte ?');
readln (stav_uctu);
sucet:=0;
while sucet<stav_uctu do
begin
writeln ('Kolko platis v obchode ?');
readln (platba_v_obchode);
sucet:=sucet+platba_v_obchode;
write ( );
if sucet<stav_uctu then
writeln ('Na ucte mas ',(stav_uctu-sucet),'eur');
end;
nedostatok:=sucet-stav_uctu;
writeln ('Nemas dost penazi na ucte');
if nedostatok>0 then writeln ('Musis v obchode vratit veci v hodnote ',nedostatok,'eur');
end;

if cislo_program='5' then
begin
clrscr;
textcolor (lightgreen);
writeln ('Zadaj nosnost vytahu');
readln (nosnost_vytahu);
sucet:=0;
 while sucet<nosnost_vytahu do
  begin
  writeln ('Zadaj hmotnost baliku (v kg)');
  read (hmotnost_baliku);
  sucet:=sucet+hmotnost_baliku;
  end;
 pretazenie:=sucet-nosnost_vytahu;
 writeln ('Vytah je pretazeny o ',pretazenie,'kg');
 if pretazenie>0 then writeln ('Vyberte z vytahu baliky s hmotnostou aspon ',pretazenie,'kg');
end;

if cislo_program='6' then
begin
Clrscr;
textcolor (white);
write ('Chces vypnut program ? (a/n)');
koniec_programu:=Readkey;
if koniec_programu= 'a' then Halt;
if koniec_programu= 'n' then Goto 1;
end;

 write ('Stlac ENTER pre vratenie sa do menu');
 Readkey;
Goto 1;

readln;
end.
